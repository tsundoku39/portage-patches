+		                   DYNTABLE_STORE_COLUMN_SELECTED_ITEM, &location,
+		                   DYNTABLE_STORE_COLUMN_ENTRY_STRING, &address,
+		                   -1);
+
+		if (location >= 0) {
+			const gchar *type;
+			eab_email_index_to_type (location, &type);
