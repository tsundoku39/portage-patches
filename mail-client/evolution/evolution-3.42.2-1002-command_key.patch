+static void
+action_mail_show_source_cb (GtkAction *action,
+                            EMailReader *reader)
+{
+	EMailDisplay *display;
+	EMailBackend *backend;
+	GtkWidget *browser;
+	CamelFolder *folder;
+	GPtrArray *uids;
+	const gchar *message_uid;
