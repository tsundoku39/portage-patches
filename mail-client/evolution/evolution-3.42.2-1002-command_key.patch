+	current_uid = MESSAGE_LIST (message_list)->cursor_uid;
+	uid_is_current &= (g_strcmp0 (current_uid, message_uid) == 0);
+
+	if (parts != NULL)
+		message = e_mail_part_list_get_message (parts);
