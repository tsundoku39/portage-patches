+	if (task_editor->priv->in_the_past_alert)
+		e_alert_response (task_editor->priv->in_the_past_alert, GTK_RESPONSE_OK);
+
+	if ((flags & E_COMP_EDITOR_FLAG_IS_NEW) != 0) {
