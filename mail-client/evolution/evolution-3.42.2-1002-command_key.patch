+static gint
+get_ui_slot (EVCardAttribute *attr)
+{
+	EVCardAttributeParam *param;
+	gint                  slot = -1;
+
+	param = get_ui_slot_param (attr);
+
+	if (param) {
+		GList *value_list;
+
+		value_list = e_vcard_attribute_param_get_values (param);
+		slot = atoi (value_list->data);
+	}
+
+	return slot;
+}
